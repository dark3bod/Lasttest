<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".addCourseAct"
    android:layoutDirection="ltr">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar2"

        android:layout_width="match_parent"
        android:layout_height="90dp"

        android:background="#6d6cea"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView555"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:layout_alignBottom="@+id/toolbar2"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginBottom="11dp"
        android:text="Choose course:"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/toolbar2"
        app:layout_constraintEnd_toEndOf="@+id/toolbar2"
        app:layout_constraintHorizontal_bias="0.124"
        app:layout_constraintStart_toStartOf="@+id/toolbar2"
        app:layout_constraintTop_toTopOf="@+id/toolbar2"
        app:layout_constraintVertical_bias="0.842" />

    <Button
        android:id="@+id/btnaddcourse"
        android:layout_width="243dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnAdd"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="23dp"
        android:layout_marginEnd="111dp"
        android:hint="ADD Course" />

    <AutoCompleteTextView
        android:gravity="start"
        android:id="@+id/multiAutoCompleteTextView2"
        android:layout_width="match_parent"
        android:textSize="25sp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/toolbar2"
        android:layout_marginBottom="-90dp"
        android:hint="Choose " />

    <TextView
        android:id="@+id/txtTeachername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/toolbar2"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="158dp"
        android:layout_marginBottom="-127dp"
        android:gravity="center"
        android:hint="Teacher Name"
        android:textSize="25sp" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/txtTeachername"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="13dp"
        android:layout_marginBottom="-50dp"
        android:id="@+id/t1"
        >
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:weightSum="100"
            android:id="@+id/tr">

            <TextView
                android:id="@+id/rowCoursename"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="ssss"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/rowCourseCode"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:gravity="left"
                android:text="ssss"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/rowCourseID"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="ssss"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/rowTeacher"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="ssss"
                android:textSize="25sp" />


        </TableRow>




    </TableLayout>

    <Button
        android:id="@+id/btnAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/t1"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="61dp"
        android:layout_marginEnd="190dp"
        android:text="add" />
</RelativeLayout>