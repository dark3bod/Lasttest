<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".addCourseAct">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar2"

        android:layout_width="match_parent"
        android:layout_height="90dp"

        android:background="#6d6cea"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView555"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:layout_alignBottom="@+id/toolbar2"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginBottom="10dp"
        android:text="Choose course:"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/toolbar2"
        app:layout_constraintEnd_toEndOf="@+id/toolbar2"
        app:layout_constraintHorizontal_bias="0.124"
        app:layout_constraintStart_toStartOf="@+id/toolbar2"
        app:layout_constraintTop_toTopOf="@+id/toolbar2"
        app:layout_constraintVertical_bias="0.842" />

    <Spinner
        android:id="@+id/spinnerAddCourse"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_below="@+id/toolbar2"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="106dp"
        android:layout_marginEnd="128dp"
        android:background="#d1d1e0"></Spinner>

    <Spinner
        android:id="@+id/spinnerAddteachrt"
        android:layout_width="200dp"

        android:layout_height="40dp"
        android:layout_below="@+id/spinnerAddCourse"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="66dp"
        android:layout_marginEnd="128dp"
        android:background="#d1d1e0"></Spinner>

    <Button
        android:id="@+id/btnaddcourse"
        android:layout_width="243dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spinnerAddteachrt"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="106dp"
        android:hint="ADD Course"
        android:layout_marginEnd="105dp"
        />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_alignBottom="@+id/toolbar2"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="266dp"
        android:layout_marginBottom="-103dp"
        android:hint="Choose a course:" />

    <TextView
        android:id="@+id/textVie2"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_alignBottom="@+id/toolbar2"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="258dp"
        android:layout_marginBottom="-210dp"
        android:hint="Choose a Teacher:" />

</RelativeLayout>