        app:layout_constraintTop_toBottomOf="@+id/txtt111" />

    <EditText
        android:id="@+id/txtOfficeNo"
        android:layout_width="33dp"
        android:layout_height="42dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="6"
        app:layout_constraintStart_toEndOf="@+id/txtt1111"
        app:layout_constraintTop_toBottomOf="@+id/txtFloorNo" />

    <Button
        android:id="@+id/btnsavehours"
        android:layout_width="wrap_content"
        android:layout_height="47dp"
        android:layout_marginStart="136dp"
        android:layout_marginTop="48dp"
        android:background="#6d6cea"
        android:onClick="saveInfo"
        android:text="Save Information"
        android:textColor="#FFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtt1111" />
</androidx.constraintlayout.widget.ConstraintLayout>