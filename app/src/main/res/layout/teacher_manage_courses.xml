<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="#cccccc"
    android:layout_margin="10dp"
    app:cardCornerRadius="6dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="left"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:layout_centerInParent="true"
                android:id="@+id/course_code_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="COURSECODENAME"
                android:textColor="#000000"
                android:textSize="25dp"
                android:textStyle="bold"/>

        </RelativeLayout>

       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_margin="5dp">
           <TextView
               android:id="@+id/_course_info"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="ggggggggg"
               android:textColor="#000000"
               android:textSize="@dimen/text_size"
              />

       </RelativeLayout>

        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            >

            <androidx.cardview.widget.CardView
                android:id="@+id/crdViewDeleteCourse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/md_red_500"
            app:cardCornerRadius="5dp">

            <TextView
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:gravity="center"
                android:text="Delete"
                android:textColor="#f2f2f2"
                android:textSize="20sp"
                android:textStyle="bold" />


        </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/crdViewEditCourses"
                android:layout_width="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/md_green_400"
                app:cardCornerRadius="5dp"
                android:layout_toEndOf="@+id/crdViewDeleteCourse" >

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="30dp"
                    android:gravity="center"
                    android:text="Edit"
                    android:textColor="@color/colortext"
                    android:textSize="20sp"
                    android:textStyle="bold" />


            </androidx.cardview.widget.CardView>
        </RelativeLayout>


    </LinearLayout>

</androidx.cardview.widget.CardView>