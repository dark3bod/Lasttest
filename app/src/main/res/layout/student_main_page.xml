<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layoutDirection="ltr"
    tools:context=".MainPage"
    android:background="#f2f2f2"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_gravity="left"
        android:clickable="true"
        android:gravity="left"
        android:layoutDirection="ltr"
        android:weightSum="100"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.google.android.material.appbar.AppBarLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:theme="@style/AppTheme.PopupOverlay">

                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/toolbar"
                    app:titleTextColor="#FFF"
                    app:title="welcome"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:background="@color/md_blue_500"
                    app:popupTheme="@style/AppTheme.PopupOverlay" />

            </com.google.android.material.appbar.AppBarLayout>
        </RelativeLayout>
        <RelativeLayout
            android:background="@color/md_moves_50"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imgProfile"
                android:layout_marginTop="50dp"
                android:layout_marginLeft="50dp"
                android:background="@drawable/user" />

            <TextView
                android:id="@+id/txtStdid"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="87dp"
                android:layout_toEndOf="@+id/imgProfile"
                android:text="555555555"
                android:textColor="#cccccc"
                android:textSize="@dimen/text_size"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/name"
                android:layout_height="wrap_content"
                android:layout_marginTop="48dp"
                android:layout_marginLeft="20dp"
                android:layout_toEndOf="@+id/imgProfile"
                android:text="Sultan alamzi"
                android:textColor="#cccccc"
                android:textSize="@dimen/text_size"
                android:textStyle="bold"/>


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_margin="3dp"
            android:gravity="center"
            >

            <androidx.cardview.widget.CardView
                android:id="@+id/crdsendrequest"
                android:layout_width="150dp"
                android:layout_height="148dp"
                android:clickable="true"
                android:onClick="openSendAct"
                app:cardBackgroundColor="@color/md_orange_500"
                app:cardCornerRadius="5dp">


                <TextView
                    android:id="@+id/textView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="90dp"
                    android:text="Send request"
                    android:textColor="#cccccc"
                    android:textSize="19sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/image1"
                    android:layout_width="59dp"
                    android:layout_height="60dp"
                    android:layout_marginLeft="43dp"
                    android:layout_marginTop="20dp"
                    android:src="@drawable/book2" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/Cardcourses"
                android:layout_width="230dp"
                android:layout_height="73dp"
                android:layout_toEndOf="@+id/crdsendrequest"
                android:clickable="true"
                android:onClick="openCoursesAct"
                android:layout_margin="3dp"
                app:cardBackgroundColor="@color/md_red_A400"
                app:cardCornerRadius="5dp"
               >

                <ImageView
                    android:id="@+id/image"
                    android:layout_width="59dp"
                    android:layout_height="60dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="8dp"
                    android:src="@drawable/course" />

                <TextView
                    android:id="@+id/txtMyrecent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="70dp"
                    android:layout_marginTop="20dp"
                    android:text="Courses"
                    android:textColor="#cccccc"
                    android:textSize="25sp"
                    android:textStyle="bold" />


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardCalnder"
                style="@style/Widget.MaterialComponents.CardView"
                android:layout_width="230dp"
                android:layout_height="73dp"
                android:layout_below="@+id/Cardcourses"
                android:layout_margin="3dp"
                android:layout_marginTop="3dp"
                android:layout_toEndOf="@+id/crdsendrequest"
                android:clickable="true"
                android:onClick="opencalnder"
                app:cardBackgroundColor="@color/md_yellow_800"
                app:cardCornerRadius="5dp">


                <TextView
                    android:id="@+id/txtcalnder"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="60dp"
                    android:layout_marginTop="10dp"
                    android:scaleType="centerInside"
                    android:text="Calendar"
                    android:textColor="#cccccc"
                    android:textSize="25sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/imagec"
                    android:layout_width="41dp"
                    android:layout_height="43dp"
                    android:layout_marginLeft="13dp"
                    android:layout_marginTop="8dp"

                    android:src="@drawable/calender" />

            </androidx.cardview.widget.CardView>


        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.cardview.widget.CardView
                android:id="@+id/cardView5"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:clickable="true"
                android:layout_margin="2.5dp"
                android:onClick="openRecentReqsAct"
                app:cardBackgroundColor="@color/md_blue_300"
                app:cardCornerRadius="5dp">
                <ImageView
                android:id="@+id/imager"
                android:layout_width="41dp"
                android:layout_height="43dp"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="12dp"

                android:src="@drawable/recent" />



                <TextView
                    android:id="@+id/txtrequests"
                    android:layout_width="237dp"
                    android:layout_height="43dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="90dp"
                    android:text="Recent requests "
                    android:textColor="#cccccc"
                    android:textSize="30sp"
                    android:textStyle="bold" />

            </androidx.cardview.widget.CardView>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="150dp">

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView3"
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:layout_marginTop="3dp"
                app:cardBackgroundColor="@color/md_orange_100"
                app:cardCornerRadius="5dp"

                >


                <TextView
                    android:id="@+id/txtmyappointment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="60dp"
                    android:layout_marginTop="9dp"
                    android:scaleType="centerInside"
                    android:text="Your next appointment:"
                    android:textColor="#b3b3b3"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/myInfopic"
                    android:layout_width="35dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="9dp"
                    app:srcCompat="@drawable/time" />

                <TextView
                    android:id="@+id/txtmydayTecher"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="50dp"
                    android:scaleType="centerInside"
                    android:text="There's no appointment!"
                    android:textColor="@color/md_red_500"
                    android:textSize="20dp"
                    android:textStyle="bold" />


            </androidx.cardview.widget.CardView>

        </RelativeLayout>




    </LinearLayout>

</ScrollView>